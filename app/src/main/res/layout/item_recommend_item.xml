<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_img"
        android:layout_width="102dp"
        android:layout_height="70dp"
        android:layout_marginTop="@dimen/padding_8"
        android:layout_marginRight="@dimen/padding_16"
        android:layout_marginBottom="@dimen/padding_8"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="@dimen/size_none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:background="@color/md_blue_500" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_16"
        android:layout_marginRight="@dimen/padding_12"
        android:textColor="@color/text_minor"
        android:textSize="@dimen/font_14"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/cv_img"
        app:layout_constraintTop_toTopOf="@+id/cv_img"
        tools:text="元宇宙>>" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_16"
        android:layout_marginRight="@dimen/padding_12"
        android:textColor="@color/text_title"
        android:textSize="@dimen/font_16"
        app:layout_constrainedWidth="true"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="@+id/cv_img"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/cv_img"
        tools:text="山东肥那是你那是带你翻难得翻南那是带你翻你乃是面对面阿单身多年你的饭你是难道你翻" />

</androidx.constraintlayout.widget.ConstraintLayout>