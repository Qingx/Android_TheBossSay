<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:background="@color/md_cyan_900">

    <ProgressBar
        android:layout_width="@dimen/font_24"
        android:layout_height="@dimen/font_24"
        android:indeterminateTint="@color/md_white"
        android:indeterminateTintMode="src_atop"
        android:visibility="gone" />

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/lv_holder_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/colorAccentLight"
        app:SpinKit_Style="ThreeBounce"/>

</LinearLayout>