<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/size_none"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/padding_8"
        app:cardCornerRadius="@dimen/padding_8"
        app:cardElevation="@dimen/size_none"
        app:cardMaxElevation="@dimen/size_none"
        app:layout_constraintDimensionRatio="110:140"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_height="200dp">

        <ImageView
            android:id="@+id/iv_card_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:background="@color/md_blue_500" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>