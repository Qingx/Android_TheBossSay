<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="134dp"
        android:layout_height="108dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/ic_boss_empty_card"
        app:layout_constraintBottom_toTopOf="@id/text_notice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/text_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="当前还没有追踪的老板！\n点击“+”号添加"
        android:textColor="@color/colorTextGray"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@id/image_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_icon" />

    <ImageView
        android:id="@+id/image_line"
        android:layout_width="123dp"
        android:layout_height="174dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_boss_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_notice" />


</androidx.constraintlayout.widget.ConstraintLayout>